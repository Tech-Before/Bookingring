<div id="spinner">
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Appartments | Houses</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item">Appartments</li>
            <li class="breadcrumb-item active">Edit Appartment | House</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-success">
            <div class="card-header">
              <h3 class="card-title">Edit Appartment | House</h3>
            </div>
            <div class="card-body">
              <form action="/Appartments/editAppartmentHouse" method="POST">
                <h5><b>Appartment | House Details</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-3">
                    <label>Appartment | House Name</label>
                    <input type="text" value="<%= data.appart.appartmentName %>" name="appartName"
                      placeholder="Example: Appartment No. 3" class="form-control" required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Price</label>
                    <input type="number" name="price" value="<%= data.appart.price %>" placeholder="Example: 5000"
                      class="form-control" required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Appartment | House Contact</label>
                    <input type="number" name="contact" value="<%= data.appart.contact %>"
                      placeholder="Example: 0946712215" class="form-control" required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Appartment | House Parking</label>
                    <select class="form-control" name="parking">
                      <option value="true" <% data.appart.parking ? 'selected' : '' %>>Yes</option>
                      <option value="false" <% !data.appart.parking ? 'selected' : '' %>>No</option>
                    </select>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Appartment | House Area</label>
                    <select class="form-control" style="width: 100%;" name="area">
                      <% for(let i=0; i< data.areas.length; i++) { %>
                        <option value="<%= data.areas[i].name %>" <% data.appart.area===data.areas[i].name ? 'selected'
                          : '' %>><%= data.areas[i].name %>
                        </option>
                        <% } %>
                    </select>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Select Option</label>
                    <select class="form-control" style="width: 100%;" name="appartType">
                      <option value="<%= data.appart.appartmentType %>" <% data.appart.appartmentType==='appartment'
                        ? 'selected' : '' %>>Appartment</option>
                      <option value="<%= data.appart.appartmentType %>" <% data.appart.appartmentType==='appartment'
                        ? 'selected' : '' %>>Hosue</option>
                    </select>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Appartment | House Address</label>
                    <input type="text" name="address" value="<%= data.appart.address %>"
                      placeholder="Example: Near Shell Ptrol Station, Madyan Bazar" class="form-control" required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Avialibility Status</label>
                    <select class="form-control" name="status">
                      <option value="true" <% data.appart.availibilityStatus ? 'selected' : '' %> > Available </option>
                      <option value="false" <% !data.appart.availibilityStatus ? 'selected' : '' %> >Unavailable
                      </option>
                    </select>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Appartment | House Classification</label>
                    <select class="form-control" style="width: 100%;" name="">
                      <option value="">Luxury</option>
                      <option value="">Economic</option>
                    </select>
                  </div>
                </div>

                <hr>

                <h5><b>Owner Info &amp; Login Details</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>Owner Name</label>
                    <input type="text" name="ownerName" value="<%= data.appart.ownerName %>"
                      placeholder="Example: Asif Khan" class="form-control" required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Owner CNIC #</label>
                    <input type="number" name="ownerCNIC" value="<%= data.appart.ownerCNIC %>"
                      placeholder="Example: xxxxx-xxxxxxx-x" class="form-control" required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Owner Contact</label>
                    <input type="number" name="ownerContact" value="<%= data.appart.ownerContact %>"
                      placeholder="Example: 03xxxxxxxxx" class="form-control" required>
                  </div>


                  <div class="form-group col-md-6">
                    <label>Login Email</label>
                    <input type="email" name="loginEmail" value="<%= data.appart.loginEmail %>"
                      placeholder="Example: example@gmail.com" class="form-control" required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Password</label>
                    <input type="password" name="loginPassword" value="<%= data.appart.loginPassword %>"
                      placeholder="Example: example@gmail.com" class="form-control" required>
                  </div>
                </div>

                <input type="hidden" name="appartId" value="<%= data.appart.id %>">

                <hr>
                <div class="form-group">
                  <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                  <button class="btn btn-success btn-sm" type="submit" name="">Edit Appartment | House</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>