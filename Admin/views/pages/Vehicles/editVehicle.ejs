<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Rental Vehicles</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item">Rental Vehicle</li>
            <li class="breadcrumb-item active">Edit Vehicle</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-success">
            <div class="card-header">
              <h3 class="card-title">Edit Rental Vehicle</h3>
            </div>
            <div class="card-body">
              <form action="/Vehicles/editVehicle" method="POST">
                <h5><b>Rental Vehicle Details</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-4">
                    <label>Vehicle Category</label>
                    <select class="form-control" name="category" required>
                      <% for(let i= 0; i< data.cats.length; i++) { %> 
                      <option value="<%= JSON.stringify({id: data.cats[i].id, name: data.cats[i].categoryName}) %>" <%= data.vehicle.categoryId == data.cats[i].id ? 'selected' : '' %> ><%= data.cats[i].categoryName %> </option>
                      <% } %> 
                    </select>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Vehicle No</label>
                    <input type="text" name="vehicleNo" value="<%= data.vehicle.vehicleNo %>" placeholder="Example: X-2652"
                      class="form-control" required>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Vehicle Model</label>
                    <input type="number" value="<%= data.vehicle.model %>" name="model" placeholder="Example: 2002"
                      class="form-control" required>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Vehicle Status</label>
                    <select class="form-control" name="status" required>
                      <option value="true" <%=data.vehicle.availabilityStatus ? 'selected' : '' %> >Available</option>
                      <option value="false" <%=!data.vehicle.availabilityStatus ? 'selected' : '' %>>Not Available</option>
                    </select>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Vehicle Seats</label>
                    <input type="number" name="seats" value="<%= data.vehicle.seats %>" placeholder="Example: 5" class="form-control" required>
                  </div>
                </div>

                <h5><b>Owner Details</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>Owner Name</label>
                    <input type="text" value="<%= data.vehicle.ownerName %>" name="ownerName"
                      placeholder="Example: Asif Khan" class="form-control" required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Owner CNIC #</label>
                    <input type="number" name="ownerCNIC" value="<%= data.vehicle.ownerCNIC %>"
                      placeholder="Example: xxxxx-xxxxxxx-x" class="form-control" required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Owner Contact</label>
                    <input type="number" name="ownerContact" value="<%= data.vehicle.ownerContact %>"
                      placeholder="Example: 03xxxxxxxxx" class="form-control" required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Owner Address</label>
                    <input type="text" name="ownerAddress" value="<%= data.vehicle.ownerAddress %>"
                      placeholder="Example: Mingora, Landikas" class="form-control" required>
                  </div>
                </div>

                <hr>

                <input type="hidden" name="id" value="<%= data.vehicle.id %>">

                <hr>
                <div class="form-group">
                  <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                  <button class="btn btn-success btn-sm" type="submit" name="">Edit Rental Vehicle</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>