<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Rental Vehicles</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item">Rental Vehicle</li>
            <li class="breadcrumb-item active">Edit Vehicle</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-success">
            <div class="card-header">
              <h3 class="card-title">Edit Rental Vehicle</h3>
            </div>
            <div class="card-body">
              <form action="/Vehicles/editVehicle" method="POST">
                <h5><b>Rental Vehicle Details</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-4">
                    <label>Vehicle Category</label>
                    <select class="form-control" name="category" required>
                      <option value="coaster" <%=vehicle.vehicleCategory==='coaster' ? 'selected' : '' %> >Coaster
                      </option>
                      <option value="hi-ace" <%=vehicle.vehicleCategory==='hi-ace' ? 'selected' : '' %> >Hi-Ace</option>
                      <option value="car" <%=vehicle.vehicleCategory==='car' ? 'selected' : '' %> >Taxi/Car</option>
                    </select>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Vehicle No</label>
                    <input type="text" name="vehicleNo" value="<%= vehicle.vehicleNo %>" placeholder="Example: X-2652"
                      class="form-control" required>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Vehicle Model</label>
                    <input type="number" value="<%= vehicle.model %>" name="model" placeholder="Example: 2002"
                      class="form-control" required>
                  </div>

                  <!-- <div class="form-group col-md-2">
                    <label>Vehicle Condition</label>
                    <select class="form-control" name="condition" required>
                      <option value="A+" <%=vehicle.condition==='A+' ? 'selected' : '' %> >A+</option>
                      <option value="A" <%=vehicle.condition==='A' ? 'selected' : '' %> >A</option>
                      <option value="B+" <%=vehicle.condition==='B+' ? 'selected' : '' %>>B+</option>
                      <option value="B" <%=vehicle.condition==='B' ? 'selected' : '' %>>B</option>
                      <option value="C" <%=vehicle.condition==='C+' ? 'selected' : '' %>>C</option>
                      <option value="C+" <%=vehicle.condition==='C' ? 'selected' : '' %>>C+</option>
                    </select>
                  </div> -->

                  <div class="form-group col-md-4">
                    <label>Vehicle Status</label>
                    <select class="form-control" name="status" required>
                      <option value="true" <%=vehicle.availabilityStatus ? 'selected' : '' %> >Available</option>
                      <option value="false" <%=!vehicle.availabilityStatus ? 'selected' : '' %>>Not Available</option>
                    </select>
                  </div>

                  <!-- <div class="form-group col-md-4">
                    <label>Car Classification</label>
                    <select class="form-control" style="width: 100%;" name="">
                      <option value="">Luxury</option>
                      <option value="">Economic</option>
                    </select>
                  </div> -->

                  <div class="form-group col-md-4">
                    <label>Vehicle Seats</label>
                    <input type="number" name="" placeholder="Example: 5" class="form-control" required>
                  </div>
                </div>

                <h5><b>Owner Details</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>Owner Name</label>
                    <input type="text" value="<%= vehicle.ownerName %>" name="ownerName"
                      placeholder="Example: Asif Khan" class="form-control" required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Owner CNIC #</label>
                    <input type="number" name="ownerCNIC" value="<%= vehicle.ownerCNIC %>"
                      placeholder="Example: xxxxx-xxxxxxx-x" class="form-control" required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Owner Contact</label>
                    <input type="number" name="ownerContact" value="<%= vehicle.ownerContact %>"
                      placeholder="Example: 03xxxxxxxxx" class="form-control" required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Owner Address</label>
                    <input type="text" name="ownerAddress" value="<%= vehicle.ownerAddress %>"
                      placeholder="Example: Mingora, Landikas" class="form-control" required>
                  </div>
                </div>

                <hr>

                <hr>
                <div class="form-group">
                  <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                  <button class="btn btn-success btn-sm" type="submit" name="">Edit Rental Vehicle</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>