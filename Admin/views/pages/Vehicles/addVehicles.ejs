<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Vehicles</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item">Vehicle</li>
            <li class="breadcrumb-item active">Add Vehicle</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-success">
            <div class="card-header">
              <h3 class="card-title">Add Vehicle</h3>
            </div>
            <div class="card-body">
              <form action="/Vehicles/addVehicle" method="POST">

                <h5><b>Vehicle Details</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-4">
                    <label>Vehicle Category</label>
                    <select class="form-control" name="category" required>
                      <option value="coaster">Coaster</option>
                      <option value="hi-ace">Hi-Ace</option>
                      <option value="car">Taxi/Car</option>
                    </select>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Vehicle No</label>
                    <input type="text" name="vehicleNo" placeholder="Example: X-2652" class="form-control" required>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Vehicle Model</label>
                    <input type="number" name="model" placeholder="Example: 2002" class="form-control" required>
                  </div>

                  <div class="form-group col-md-2">
                    <label>Vehicle Condition</label>
                    <select class="form-control" name="condition" required>
                      <option value="A+">A+</option>
                      <option value="A">A</option>
                      <option value="B+">B+</option>
                      <option value="B">B</option>
                      <option value="C">C</option>
                      <option value="C+">C+</option>
                    </select>
                  </div>

                  <div class="form-group col-md-2">
                    <label>Vehicle Status</label>
                    <select class="form-control" name="status" required>
                      <option value="true">Available</option>
                      <option value="false">Not Available</option>
                    </select>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Car Classification</label>
                    <select class="form-control" style="width: 100%;" name="">
                      <option value="">Luxury</option>
                      <option value="">Economic</option>
                    </select>
                  </div>

                  <div class="form-group col-md-4">
                    <label>Car Seats</label>
                    <input type="number" name="" placeholder="Example: 5" class="form-control" required>
                  </div>
                </div>

                <h5><b>Owner Details</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>Owner Name</label>
                    <input type="text" name="ownerName" placeholder="Example: Asif Khan" class="form-control" required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Owner CNIC #</label>
                    <input type="number" name="ownerCNIC" placeholder="Example: xxxxx-xxxxxxx-x" class="form-control"
                      required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Owner Contact</label>
                    <input type="number" name="ownerContact" placeholder="Example: 03xxxxxxxxx" class="form-control"
                      required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Owner Address</label>
                    <input type="text" name="ownerAddress" placeholder="Example: Mingora, Landikas" class="form-control"
                      required>
                  </div>
                </div>

                <hr>

                <hr>
                <div class="form-group">
                  <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                  <button class="btn btn-success btn-sm" type="submit" name="">Add Vehicle</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>