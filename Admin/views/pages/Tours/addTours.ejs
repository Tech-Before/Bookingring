<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Tours</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">Tours</li>
              <li class="breadcrumb-item active">Add Tour/Hike</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">Add Tour/Hike Details</h3>
              </div>
              <div class="card-body">
                <form action="/Tours/addTours" method="POST">
                    <h5><b>Tour/Hike</b></h5>
                    <hr>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Select Tour or Hike</label>
                            <select class="form-control select2" style="width: 100%; height: 100%;" name="tourType">
                                <option value="tour">Tour</option>
                                <option value="hike">Hike</option>
                            </select>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Tour/Hike Start Date</label>
                            <input type="date" class="form-control" name="startDate" min="2021-12-1" required>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Tour/Hike Return Date</label>
                            <input type="date" class="form-control" name="endDate" required>
                        </div>
                    </div>
                    
                    <hr>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Tour/Hike From Place</label>
                            <select class="form-control select2" style="width: 100%; height: 100%;" name="fromPlace">
                                <% for(let i = 0; i < areas.length; i++) { %>
                                  <option value="<%= areas[i].name %>"><%= areas[i].name %></option>
                                <% } %>
                            </select>
                        </div>

                        <div class="form-group col-md-6">
                            <label>Tour/Hike To Place</label>
                            <select class="form-control select2" style="width: 100%; height: 100%;" name="toPlace">
                                <% for(let i = 0; i < areas.length; i++) { %>
                                  <option value="<%= areas[i].name %>"><%= areas[i].name %></option>
                                <% } %>
                            </select>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Tour/Hike Days</label>
                            <input type="number" name="days" placeholder="Example: 3" class="form-control" required>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Tour/Hike Nights</label>
                            <input type="number" name="nights" placeholder="Example: 2" class="form-control" required>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Available Seats/Vacancies</label>
                            <input type="number" name="seats" placeholder="Example: 15" class="form-control" required>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Charges (Per Head Charges)</label>
                            <input type="number" name="charges" placeholder="Example: 1800" class="form-control" required>
                        </div>

                        <div class="form-group col-md-12">
                          <label>Description</label>
                          <textarea name="desc" id="" cols="10" rows="10" class="form-control" placeholder="Enter Description" required></textarea>
                        </div>
                    </div>
                    <hr>
                    <div class="form-group">
                        <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                        <button class="btn btn-success btn-sm" type="submit" name="">Add Tour/Hike</button>
                    </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>