<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Tour/Hike</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">Tour/Hike</li>
              <li class="breadcrumb-item active">Tour/Hike List</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">Tour/Hike List</h3>
                </div>
                  <!-- /.card-header -->
                <div class="card-body">
                <table id="tableData" class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>S#</th>
                        <th>Tour | Hike</th>
                        <th>Tour Date</th>
                        <th>Return Date</th>
                        <th>Place</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                      <% for(let i = 0; i < tours.length; i++) { %>
                        <tr>
                            <td><%= i + 1 %></td>
                            <td><span class="badge <%= tours[i].tourType === 'tour' ? 'badge-primary' : 'badge-secondary' %>" style="font-size: 14px;"><%= tours[i].tourType %></span></td>
                            <td><%= tours[i].startDate %></td>
                            <td><%= tours[i].endDate %></td>
                            <td><%= tours[i].fromPlace %> to <%= tours[i].toPlace %></td>
                            <td>
                                <a href="/Tours/viewTour" class="btn btn-info btn-sm"><i class="fa fa-eye"></i></a>
                                <a href=<%= '/Tours/editTour/' + tours[i].id %> class="btn btn-primary btn-sm"><i class="fa fa-pencil"></i></a>
                            </td>
                        </tr>
                      <% } %>

                        <!-- <tr>
                            <td>2</td>
                            <td><span class="badge badge-secondary" style="font-size: 14px;">Hike</span></td>
                            <td>12/01/2021</td>
                            <td>12/04/2021</td>
                            <td>Mingora to Kalam</td>
                            <td>
                                <a href="/Tours/viewTour" class="btn btn-info btn-sm"><i class="fa fa-eye"></i></a>
                                <a href="/Tours/editTour" class="btn btn-primary btn-sm"><i class="fa fa-pencil"></i></a>
                            </td>
                        </tr> -->
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>S#</th>
                            <th>Tour | Hike</th>
                            <th>Tour Date</th>
                            <th>Return Date</th>
                            <th>Place</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                </table>
                </div>
            </div>
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>