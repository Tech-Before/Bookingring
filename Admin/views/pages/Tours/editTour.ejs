<div id="spinner">
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Tours</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item">Tours</li>
            <li class="breadcrumb-item active">Edit Tour/Hike</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-success">
            <div class="card-header">
              <h3 class="card-title">Edit Tour/Hike Details</h3>
            </div>
            <div class="card-body">
              <form action="/Tours/editTour/" method="POST">
                <h5><b>Tour/Hike</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>Select Tour or Hike</label>
                    <select class="form-control select2" style="width: 100%; height: 100%;" name="tourType">
                      <option value="tour" <%=data.tour.tourType==='tour' ? 'selected' : '' %> >Tour</option>
                      <option value="hike" <%=data.tour.tourType==='hike' ? 'selected' : '' %> >Hike</option>
                    </select>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Tour/Hike Start Date</label>
                    <input type="date" class="form-control" name="startDate" value="<%= data.tour.startDate %>"
                      required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Tour/Hike Return Date</label>
                    <input type="date" class="form-control" name="endDate" value="<%= data.tour.endDate %>" required>
                  </div>
                </div>

                <hr>

                <div class="row">
                  <div class="form-group col-md-6">
                    <label>Tour/Hike From Place</label>
                    <select class="form-control select2" style="width: 100%; height: 100%;" name="fromPlace">

                      <% for(let i=0; i < data.areas.length; i++) { %>
                        <option value="<%= data.areas[i].name %>" <%=data.areas[i].name===data.tour.fromPlace
                          ? "selected" : "" %> ><%= data.areas[i].name %>
                        </option>
                        <% } %>

                    </select>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Tour/Hike To Place</label>
                    <select class="form-control select2" style="width: 100%; height: 100%;" name="toPlace">

                      <% for(let i=0; i<data.areas.length; i++) { %>
                        <option value="<%= data.areas[i].name %>" <%=data.areas[i].name===data.tour.toPlace ? 'selected'
                          : '' %> ><%= data.areas[i].name %>
                        </option>
                        <% } %>

                    </select>
                  </div>

                  <!-- New Data -->
                  <div class="form-group col-md-6">
                    <label>Pick-Up Location</label>
                    <select class="form-control select2" style="width: 100%; height: 100%;" name="">
                      <option value="">Kalam</option>
                      <option value="">Behrain</option>
                      <option value="">Madyan</option>
                    </select>
                  </div>

                  <div class=" form-group col-md-6">
                    <label>Drop-Off Location</label>
                    <select class="form-control select2" style="width: 100%; height: 100%;" name="">
                      <option value="">Kalam</option>
                      <option value="">Behrain</option>
                      <option value="">Madyan</option>
                    </select>
                  </div>


                  <div class=" form-group col-md-6">
                    <label>Hotel Stay</label>
                    <select class="form-control select2" style="width: 100%; height: 100%;" name="">
                      <option value="">Kalam</option>
                      <option value="">Behrain</option>
                      <option value="">Madyan</option>
                    </select>
                  </div>
                  <!-- /New Data -->
                </div>

                <hr>



                <div class="form-group col-md-3">
                  <label>Tour/Hike Days</label>
                  <input type="number" name="days" value="<%= data.tour.days %>" placeholder="" class="form-control"
                    required>
                </div>

                <div class="form-group col-md-3">
                  <label>Tour/Hike Nights</label>
                  <input type="number" value="<%= data.tour.nights %>" name="nights" placeholder="" class="form-control"
                    required>
                </div>

                <div class="form-group col-md-3">
                  <label>Available Seats/Vacancies</label>
                  <input type="number" name="seats" placeholder="" value="<%= data.tour.availableSeats %>"
                    class="form-control" required>
                </div>

                <div class="form-group col-md-3">
                  <label>Charges (Per Head Charges)</label>
                  <input type="number" name="charges" value="<%= data.tour.chargesPerHead %>" placeholder=""
                    class="form-control" required>
                </div>

                <div class="form-group col-md-12">
                  <label>Description</label>
                  <textarea name="desc" id="" cols="10" rows="10" class="form-control" placeholder=""
                    required><%= data.tour.description %> </textarea>
                </div>
            </div>
            <input type="hidden" value="<%= data.tour.id %>" name="tourId" />
            <hr>
            <div class="form-group">
              <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
              <button class="btn btn-success btn-sm" type="submit" name="">Edit Tour/Hike</button>
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->
</section>
<!-- /.content -->
</div>