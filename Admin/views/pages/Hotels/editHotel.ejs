<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Hotels</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">Hotel</li>
              <li class="breadcrumb-item active">Edit Hotel</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">Edit Hotel</h3>
              </div>
              <div class="card-body">
                <form method="POST">
                    <h5><b>Hotel Details</b></h5><hr>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Hotel Name</label>
                            <input type="text" name="" placeholder="Example: Continental" class="form-control" required>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Hotel Contact</label>
                            <input type="number" name="" placeholder="Example: 0946712215" class="form-control" required>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Hotel Parking</label>
                            <select class="form-control" name="">
                                <option value="1">Yes</option>
                                <option value="2">No</option>
                            </select>
                        </div>

                        <div class="form-group col-md-6">
                            <label>Hotel Area</label>
                            <select class="form-control select2" style="width: 100%; height: 100%;" name="">
                                <option value="1">Kalam</option>
                                <option value="2">Malamjabba</option>
                                <option value="3">Madyan</option>
                            </select>
                        </div>

                        <div class="form-group col-md-6">
                            <label>Hotel Address</label>
                            <input type="text" name="" placeholder="Example: Near Shell Ptrol Station, Madyan Bazar" class="form-control" required>
                        </div>
                    </div>

                    <hr>
                    <h5><b>Owner Info &amp; Login Details</b></h5><hr>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Owner Name</label>
                            <input type="text" name="" placeholder="Example: Asif Khan" class="form-control" required>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Owner CNIC #</label>
                            <input type="number" name="" placeholder="Example: xxxxx-xxxxxxx-x" class="form-control" required>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Owner Contact</label>
                            <input type="number" name="" placeholder="Example: 03xxxxxxxxx" class="form-control" required>
                        </div>


                        <div class="form-group col-md-6">
                            <label>Login Email</label>
                            <input type="email" name="" placeholder="Example: example@gmail.com" class="form-control" required>
                        </div>

                        <div class="form-group col-md-6">
                            <label>Password</label>
                            <input type="password" name="" placeholder="Example: example@gmail.com" class="form-control" required>
                        </div>
                    </div>


                    <hr>
                    <div class="form-group">
                        <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                        <button class="btn btn-success btn-sm" type="submit" name="">Edit Hotel</button>
                    </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>