<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Hotel Gallery</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">Hotel</li>
              <li class="breadcrumb-item active">Hotel Gallery</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">Hotel Gallery</h3>
              </div>
              <div class="card-body">
                <a class="btn btn-info btn-lg mb-1" href="<%= '/Hotels/addHotelImages?hotelId=' + gallery.hotelId %>">Add New<i class="fa fa-plus"></i></a>
                <div class="row">
              
                  <% for(let i=0; i< gallery.images.length; i++) { %>
                    <div class="col-md-4">
                      <img src="<%= '/images/' + gallery.images[i] %>" class="img-thumbnail" width="304" height="236">
                      <form action="/Hotels/DeleteGalleryImage" method="POST">
                        <input type="hidden" name="galleryId" value="<%= gallery.id %>">
                        <input type="hidden" name="image" value="<%= gallery.images[i] %>">
                        <input type="hidden" name="hotelId" value="<%= gallery.hotelId %>">
                        <button type="submit" class="btn btn-danger btn-sm" style="width: 90%">Delete</button>
                      </form>
                    </div>
                  
                    <% } %>
              
                </div>
                <hr>
                <div class="form-group">
                  <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                </div>
              
              </div>
            </div>
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>