<div id="spinner">
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Hotels</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item">Hotel</li>
            <li class="breadcrumb-item active">Add Hotel</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-success">
            <div class="card-header">
              <h3 class="card-title">Add Hotel</h3>
            </div>
            <div class="card-body">
              <form action="/Hotels/addHotel" method="POST">
                <h5><b>Hotel Details</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>Hotel Name</label>
                    <input type="text" name="hotelName" placeholder="Example: Continental" class="form-control"
                      required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Hotel Contact</label>
                    <input type="number" name="contact" placeholder="Example: 0946712215" class="form-control" required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Hotel Parking</label>
                    <select class="form-control" name="parking">
                      <option value="true">Yes</option>
                      <option value="false">No</option>
                    </select>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Hotel Location</label>
                    <select class="form-control select2" style="width: 100%; height: 100%;" name="area">
                      <% for( let i=0; i< areas.length; i++) { %>
                        <option value="<%= areas[i].name %>">
                          <%= areas[i].name %>
                        </option>
                        <% } %>
                    </select>
                  </div>

                  <!-- New Data -->
                  <div class="form-group col-md-3">
                    <label>Room Service</label>
                    <select class="form-control select2" name="roomServices">
                      <option value="true">Yes</option>
                      <option value="false">No</option>
                    </select>
                  </div>
                  <!-- /New Data -->

                  <div class="form-group col-md-6">
                    <label>Hotel Address</label>
                    <input type="text" name="address" placeholder="Example: Near Shell Ptrol Station, Madyan Bazar"
                      class="form-control" required>
                  </div>
                </div>

                <hr>
                <h5><b>Owner Info &amp; Login Details</b></h5>
                <hr>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>Owner Name</label>
                    <input type="text" name="ownerName" placeholder="Example: Asif Khan" class="form-control" required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Owner CNIC #</label>
                    <input type="number" name="ownerCNIC" placeholder="Example: xxxxx-xxxxxxx-x" class="form-control"
                      required>
                  </div>

                  <div class="form-group col-md-3">
                    <label>Owner Contact</label>
                    <input type="number" name="ownerContact" placeholder="Example: 03xxxxxxxxx" class="form-control"
                      required>
                  </div>


                  <div class="form-group col-md-6">
                    <label>Login Email</label>
                    <input type="email" name="loginEmail" placeholder="Example: example@gmail.com" class="form-control"
                      required>
                  </div>

                  <div class="form-group col-md-6">
                    <label>Password</label>
                    <input type="password" name="loginPassword" placeholder="Example: example@gmail.com"
                      class="form-control" required>
                  </div>
                </div>


                <hr>
                <div class="form-group">
                  <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                  <button class="btn btn-success btn-sm" type="submit" name="">Add Hotel</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>