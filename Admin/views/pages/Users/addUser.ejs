<div id="spinner" >
  <div id="spinning-wheel" class="text-center ">
    <div class="spinner-grow" style="width: 4rem; height: 4rem;" role="status">
        <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>System Users</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <!-- <li class="breadcrumb-item">Hotel</li> -->
              <li class="breadcrumb-item active">Add System User</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">Add System User</h3>
              </div>
              <div class="card-body">
                <form action="/Users/addUser" method="POST">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Name</label>
                            <input type="text" name="name" placeholder="Example: Example" class="form-control" required>
                        </div>

                        <div class="form-group col-md-3">
                            <label>User Contact</label>
                            <input type="number" name="contact" placeholder="Example: 03460973906" class="form-control" required>
                        </div>

                        <div class="form-group col-md-3">
                            <label>User CNIC</label>
                            <input type="number" name="cnic" placeholder="Example: xxxxx-xxxxxxx-x" class="form-control" required>
                        </div>

                        <div class="form-group col-md-3">
                            <label>User Gender</label>
                            <select class="form-control" name="gender">
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                                <option value="other">Other</option>
                            </select>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Location</label>
                            <select class="form-control select2" name="location">
                                <option value="kalam">Kalam</option>
                                <option value="madyan">Madyan</option>
                                <option value="behrain">Behrain</option>
                            </select>
                        </div>

                        <div class="form-group col-md-6">
                            <label>User Address</label>
                            <input type="text" name="address" placeholder="Example: House No, Street No, City, District." class="form-control" required>
                        </div>

                        <div class="form-group col-md-6">
                            <label>User Type</label>
                            <select class="form-control" style="width: 100%;" name="type">
                                <option value="admin">Admin Dashbaord User</option>
                                <option value="owner">Owner</option>
                            </select>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>User Email</label>
                            <input type="text" name="email" placeholder="example@gmail.com" class="form-control" required>
                        </div>

                        <div class="form-group col-md-6">
                            <label>User Password</label>
                            <input type="password" name="password" placeholder="Enter Password" class="form-control" required>
                        </div>
                    </div>



                    <hr>
                    <div class="form-group">
                         
                        <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                        <button class="btn btn-success btn-sm" type="submit" name="">Add User</button>
                    </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>