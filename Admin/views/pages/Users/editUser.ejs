<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>System Users</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <!-- <li class="breadcrumb-item">Hotel</li> -->
              <li class="breadcrumb-item active">Edit System User</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">Edit System User</h3>
              </div>
              <div class="card-body">
                <form method="POST">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Name</label>
                            <input type="text" name="" placeholder="Example: Example" class="form-control" required>
                        </div>

                        <div class="form-group col-md-3">
                            <label>User Contact</label>
                            <input type="number" name="" placeholder="Example: 03460973906" class="form-control" required>
                        </div>

                        <div class="form-group col-md-3">
                            <label>User CNIC</label>
                            <input type="number" name="" placeholder="Example: xxxxx-xxxxxxx-x" class="form-control" required>
                        </div>

                        <div class="form-group col-md-3">
                            <label>User Gender</label>
                            <select class="form-control" name="">
                                <option value="1">Male</option>
                                <option value="2">Female</option>
                                <option value="3">Other</option>
                            </select>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Location</label>
                            <select class="form-control select2" name="">
                                <option value="1">Kalam</option>
                                <option value="2">Madyan</option>
                                <option value="3">Behrain</option>
                            </select>
                        </div>

                        <div class="form-group col-md-6">
                            <label>User Address</label>
                            <input type="text" name="" placeholder="Example: House No, Street No, City, District." class="form-control" required>
                        </div>

                        <div class="form-group col-md-6">
                            <label>User Type</label>
                            <select class="form-control" style="width: 100%;" name="">
                                <option value="1">Admin Dashbaord User</option>
                                <option value="2">Hotel User</option>
                            </select>
                        </div>

                        <div class="form-group col-md-6">
                            <label>User Status</label>
                            <select class="form-control" style="width: 100%;" name="">
                                <option value="1">Active</option>
                                <option value="2">Inactive</option>
                            </select>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>User Email</label>
                            <input type="text" name="" placeholder="example@gmail.com" class="form-control" required>
                        </div>

                        <div class="form-group col-md-6">
                            <label>User Password</label>
                            <input type="password" name="" placeholder="Enter Password" class="form-control" required>
                        </div>
                    </div>

                    <hr>
                    
                    <div class="form-group">
                         
                        <a class="btn btn-secondary btn-sm" name="cancel" type="submit" onclick="history.back(-1)">Cancel</a>
                        <button class="btn btn-success btn-sm" type="submit" name="">Edit User</button>
                    </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>