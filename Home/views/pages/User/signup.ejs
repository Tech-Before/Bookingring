<link rel="stylesheet" href="../../Logincss/style.css">

<style>
    .customStyle {
        margin-top: 5% !important;
        margin-bottom: 10% !important;
    }
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://rawgit.com/RobinHerbots/jquery.inputmask/3.x/dist/jquery.inputmask.bundle.js"></script>


<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center customStyle">
            <div class="col-md-6 col-lg-4">
                <div class="login-wrap p-0">
                    <h3 class="mb-4 text-center">Create Account!</h3>
                    <form class="signin-form">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Name" required>
                        </div>

                        <div class="form-group">
                            <input type="number" class="form-control phone" placeholder="Contact" name="phoneNumber"
                                id="phoneNumber">
                        </div>

                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Email" required>
                        </div>


                        <div class="form-group">
                            <input id="password-field" type="password" class="form-control" placeholder="Password"
                                required>
                            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                        </div>
                    </form>
                    <p class="w-100 text-center">&mdash; Already Have an account? &mdash;</p>
                    <div class="social d-flex text-center">
                        <!-- <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span>
                            Facebook</a> -->
                        <a href="/User/login" class="px-2 py-2 ml-md-1 rounded"><span
                                class="ion-logo-twitter mr-2"></span>
                            Sign In</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.body.style.backgroundImage = "url('../Loginimages/bg.jpg')";
</script>

<script>
    $(document).ready(function () {
        $('.phone').inputmask('(999)-999-9999');
    });
</script>
<script src="../Loginjs/main.js"></script>